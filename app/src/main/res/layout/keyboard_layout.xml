<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/digitKB"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50.0dip">
        <Button android:textSize="24.0dip"
            android:textColor="#FFFFFFFF"
            android:gravity="center"
            android:id="@+id/bt_textview0"
            android:background="@drawable/textview0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.0dip" />
        <Button android:textSize="24.0dip"
            android:textColor="#FFFFFFFF"
            android:gravity="center"
            android:id="@+id/bt_textview"
            android:background="@drawable/textview0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.0dip" />"
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton android:layout_gravity="center"
                android:id="@+id/bt_one"
                android:background="@drawable/btn_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageButton android:layout_gravity="center"
                android:id="@+id/bt_two"
                android:background="@drawable/btn_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageButton android:layout_gravity="center"
                android:id="@+id/bt_thr"
                android:background="@drawable/btn_thr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton android:layout_gravity="center"
                android:id="@+id/bt_fou"
                android:background="@drawable/btn_fou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageButton android:layout_gravity="center"
                android:id="@+id/bt_fiv"
                android:background="@drawable/btn_fiv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageButton android:layout_gravity="center"
                android:id="@+id/bt_six"
                android:background="@drawable/btn_six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton android:layout_gravity="center"
                android:id="@+id/bt_sev"
                android:background="@drawable/btn_sev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageButton android:layout_gravity="center"
                android:id="@+id/bt_eig"
                android:background="@drawable/btn_eig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageButton android:layout_gravity="center"
                android:id="@+id/bt_nin"
                android:background="@drawable/btn_nin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton android:layout_gravity="center"
                android:id="@+id/bt_del"
                android:background="@drawable/btn_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageButton android:layout_gravity="center"
                android:id="@+id/bt_zer"
                android:background="@drawable/btn_zer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageButton android:layout_gravity="center"
                android:id="@+id/bt_ok"
                android:background="@drawable/btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDiscInfo"
        android:visibility="gone"
        android:background="@drawable/icon_discinfo"
        android:textColor="#FFFFFFFF"
        android:textSize="25dp"
        android:layout_gravity="center"/>
</FrameLayout>